@model IEnumerable< SignalR.MVC.Models.DevTest >
    @{ 
        Layout = null;
    }
<div id="page-wrapper" >
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DevTest</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    DevTest List
                    <button class="btn btn-primary btn-xs" data-toggle="modal" data-target="#myModal" style="float:right" onclick="openPopup(0)" type="button">
                        Add
                    </button>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-devtest">
                            <thead>
                                <tr>
                                    <th>Sr. No.</th>
                                    <th>Campaign Name</th>
                                    <th>Date</th>
                                    <th>Clicks</th>
                                    <th>Conversions</th>
                                    <th>Impressions</th>
                                    <th>Affiliate Name</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int index = 0;}
                                @foreach (var item in Model)
                                {
                                    index++;
                                <tr>
                                    <td>@index</td>
                                    <td>@item.CampaignName</td>
                                    <td>@{
                                        if (item.Date.HasValue)
                                        {
                                            <span>@item.Date.Value.ToShortDateString()</span>
                                        }
                                    }</td>
                                    <td>@item.Clicks</td>
                                    <td>@item.Conversions</td>
                                    <td>@item.Impressions</td>
                                    <td>@item.AffiliateName</td>
                                    <td><a data-toggle="modal" data-target="#myModal" onclick="openPopup(@item.Id)">Edit</a> <a onclick="deleteR(@item.Id)">Delete</a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>    
</div>